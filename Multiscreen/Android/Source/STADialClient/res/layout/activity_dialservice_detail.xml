<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="1" >
        
    <TextView
        android:id="@+id/application_url_label"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="1"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="none"
        android:text="Application" />
    
    <AutoCompleteTextView
        android:id="@+id/application_name"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="2"
        android:ems="10" 
        android:autoLink="none"
        android:linksClickable="false"
        android:inputType="textNoSuggestions|textAutoComplete"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/parameters_field_label"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="4"
        android:ems="10"
        android:inputType="none"
        android:textSize="16sp"
        android:text="Parameters (optional)" />
    
    <AutoCompleteTextView
        android:id="@+id/parameters_field"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="5"
        android:ems="10" />

    <Space
        android:layout_width="1dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/actions_label"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="7"
        android:ems="10"
        android:textSize="16sp"
        android:text="Action" />
    
    <Button
        android:id="@+id/start_button"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_row="8"
        android:text="Start" />

    <Button
        android:id="@+id/stop_button"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="8"
        android:text="Stop" />

    <Button
        android:id="@+id/query_button"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_marginRight="10dp"
        android:layout_row="8"
        android:text="Query" />

    <Space
        android:layout_width="1dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/results_label"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="9"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="none"
        android:text="Results" />
    
    <ScrollView
        android:id="@+id/status_scroller"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:scrollbars="vertical"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:layout_row="10"
    	android:maxLines="6" >
    	<TextView
        	android:id="@+id/status_message"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_gravity="center_horizontal|top"
        	android:inputType="none" 
        	/>
    </ScrollView>
</GridLayout>